{
  "openapi": "3.1.0",
  "info": {
    "title": "Problemologist Controller API",
    "version": "0.1.0"
  },
  "paths": {
    "/episodes/": {
      "get": {
        "summary": "List Episodes",
        "operationId": "list_episodes",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Episode"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/episodes/{episode_id}": {
      "get": {
        "summary": "Get Episode",
        "operationId": "get_episode",
        "parameters": [
          {
            "name": "episode_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Episode"
                }
              }
            }
          }
        }
      }
    },
    "/skills/": {
      "get": {
        "summary": "List Skills",
        "operationId": "list_skills",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Skill"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Episode": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "task": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": ["running", "completed", "failed", "cancelled"]
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": ["id", "task", "status", "created_at"]
      },
      "Skill": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        },
        "required": ["name"]
      }
    }
  }
}
