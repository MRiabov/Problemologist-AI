{
  "project_name": "P-AI",
  "languages": {
    "Python": {
      "language_servers": ["pyrefly", "ruff", "!pyright", "!pylsp"],
    },
  },
  "lsp": {
    "pyrefly": {
      // "binary": {
      //   "path": ".venv/bin/pyrefly",
      //   "arguments": ["lsp"]
      // },
      "settings": {
        "python": {
          "pythonPath": ".venv/bin/python",
        },
        "pyrefly": {
          "project_includes": ["src/**/*.py", "tests/**/*.py"],
          "project_excludes": ["**/.[!/.]*", "**/*venv/**"],
          "search_path": ["src"],
          "ignore_errors_in_generated_code": true,
        },
      },
    },
  },
  "terminal":{
    "pr"
  }
}
